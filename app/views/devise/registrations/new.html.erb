<section>
  <div class="">
    <div class="row d-flex h-100">
      <div class="signup-parent">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

          <%= render "nav", f:f %>


          <div class="field">
            <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Enter your Name', class: "signup-field form-control form-control-lg" %>
          </div> 

          <div class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Enter your Email', class: "signup-field form-control form-control-lg" %>
          </div>
          <div class="field">
            <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Enter your new password', class: "signup-field form-control form-control-lg" %>
          </div>
          <div class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirm your new password', class: "signup-field form-control form-control-lg" %>
          </div> 

        <% end %>

      </div>
    </div>
  </div>
</section>


<%= render "devise/shared/links" %>
