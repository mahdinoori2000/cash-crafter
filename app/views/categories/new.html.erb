
<section style="margin-top: -50px">
  <div class="container py-5 h-100">
    <div class="row d-flex h-100">
      <div class="col-md-7 col-lg-5 col-xl-5 offset-xl-1">

        <%= form_with(model: @category) do |form| %>
          
          <div class="d-flex align-items-center justify-content-between bg-primary bg-gradient" style="width: 100%; height: 3rem; margin-bottom: 50px;">
          <%= link_to link_to "Back", categories_path, class: "btn btn-outline-primary text-white" %>
            <h2 class="text-white fs-4">New Category</h2>

            <div class="actions">
              <%= form.submit "Create", class: "btn btn-outline-primary btn-lg btn-block text-white" %>
            </div>

          </div>

          <div class="field form-outline mb-4">
            <%= form.text_field :name, placeholder: 'Enter category Name', class: "form-control form-control-lg" %>
          </div>

          <div class="form-group form-outline mb-4">
            <%= form.label :icon %>
            <%= form.select :icon, @icons, {}, class: "form-control form-control-lg" %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
</section>

